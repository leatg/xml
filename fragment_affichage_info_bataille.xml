<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourHeros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nbBataille"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:shadowColor="#541515"
            android:shadowRadius="2"
            android:textColor="#1C1C1C"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="#FFFFFF"
            android:backgroundTint="#F4F4F4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/monstre"
                app:srcCompat="@drawable/heros" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nom"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="serif-monospace"
                    android:shadowColor="#4A1111"
                    android:shadowRadius="2"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/race"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:fontFamily="serif-monospace"
                    android:shadowColor="#4A1111"
                    android:shadowRadius="2"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/gentillesse"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="serif-monospace"
                    android:shadowColor="#4A1111"
                    android:shadowRadius="2"
                    android:textSize="34sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="212dp"
                    android:background="#00CAA5A5"
                    android:backgroundTint="#00866E6E" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>